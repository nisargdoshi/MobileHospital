<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilehospital.nisargdoshi.mobilehospital.usertype">

    <TextView
        android:id="@+id/tv_head_usertype"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:text="How would you like to login into system?"
        android:textColor="#000000"
        android:textSize="8pt"
        android:textStyle="bold" />

    <LinearLayout android:layout_height="180dp"
        android:layout_width="match_parent"

        android:gravity="center"
        android:layout_marginTop="100dp">

        <RadioGroup
            android:id="@+id/rg_usertype"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:gravity="center">

                <RadioButton
                    android:id="@+id/rgb_patient_usertype"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:checked="true"
                    android:text="Patient"
                   />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Expert/Doctor"
                android:id="@+id/rgb_expert_usertype"
                    />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/rgb_admin_usertype"
                android:text="Admin" />


        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next_usertype"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="285dp"
        android:background="@color/blue"
        android:text="Next"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
