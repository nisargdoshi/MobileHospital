<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilehospital.nisargdoshi.mobilehospital.patient_blood_need">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="13dp"
        android:text="We are here to complete your need!" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_patient_blood_need_dn"
        android:layout_below="@+id/textView10"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:text="Blood Group " />

    <Spinner
        android:id="@+id/sp_patient_blood_need_bg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView12"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/textView12"
        android:entries="@array/bg"/>

    <Spinner
        android:id="@+id/sp_patient_blood_need_el"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sp_patient_blood_need_bg"
        android:layout_below="@+id/sp_patient_blood_need_bg"
        android:layout_marginStart="9dp"
        android:layout_marginTop="13dp"
        android:entries="@array/El" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sp_patient_blood_need_el"
        android:layout_toStartOf="@+id/sp_patient_blood_need_bg"
        android:text="Emegancy level" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/sp_patient_blood_need_el"
        android:layout_marginTop="12dp"
        android:text="Make sure that choose emargancy level criticaly because it can save someone life!!"
        android:textColor="#FF0000" />

    <EditText
        android:id="@+id/et_patient_blood_need_dn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:hint="Doctor/Expert Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_patient_blood_need_uprn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_patient_blood_need_dn"
        android:layout_below="@+id/et_patient_blood_need_dn"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="UPRN of Doctor"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_patient_blood_need_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_patient_blood_need_cn"
        android:layout_below="@+id/et_patient_blood_need_cn"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_patient_blood_need_cs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_toEndOf="@+id/textView13"
        android:text="Check Status" />

    <EditText
        android:id="@+id/et_patient_blood_need_cn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_patient_blood_need_uprn"
        android:layout_below="@+id/et_patient_blood_need_uprn"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_patient_need"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_patient_blood_need_cs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Applay" />

</RelativeLayout>
