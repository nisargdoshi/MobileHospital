<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilehospital.nisargdoshi.mobilehospital.patient_blood_donate">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Thanks for showing your intrest in donate your blood!" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="21dp"
        android:text="Your blood group" />

    <Spinner
        android:id="@+id/sp_patient_donate_blood_type"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/textView9"
        android:entries="@array/bg" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="26dp"
        android:text="Did you ever donate your blood before?" />

    <Spinner
        android:id="@+id/sp_patient_donate_blood_first"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignTop="@+id/textView9"
        android:entries="@array/yn"
        android:textAlignment="textEnd" />

    <Spinner
        android:id="@+id/sp_patient_donate_blood_freq"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_below="@+id/sp_patient_donate_blood_first"
        android:layout_marginTop="20dp"
        android:entries="@array/yn" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/sp_patient_donate_blood_freq"
        android:text="Are you frequntly donate?" />

    <TextView
        android:id="@+id/tv_patient_donate_blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_patient_donate_blood_freq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="TextView" />


    <Button
        android:id="@+id/btn_patinent_donate_blood_Aggree"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_patient_donate_blood_cno"
        android:layout_below="@+id/et_patient_donate_blood_email"
        android:layout_marginTop="26dp"
        android:text="Avilable for donate" />

    <EditText
        android:id="@+id/et_patient_donate_blood_cno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_patient_donate_blood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Please Enter contact number"/>

    <EditText
        android:id="@+id/et_patient_donate_blood_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_patinent_donate_blood_Aggree"
        android:layout_below="@+id/et_patient_donate_blood_cno"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email ID"/>
</RelativeLayout>
