<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_change_fname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="New First Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_change_lname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_Change_bdate"
        android:layout_alignEnd="@+id/et_Change_bdate"
        android:ems="10"
        android:hint="New Last Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_Change_bdate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_change_fname"
        android:layout_below="@+id/et_change_fname"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Enter new birthdate"
        android:inputType="textPersonName" />

</RelativeLayout>
